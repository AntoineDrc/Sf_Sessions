{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<div class="tableau">
    <h1>Catégories</h1>
    <a href="{{ path('new_category') }}">
        <button type="button" class="btn btn-outline-primary">Add Category</button>
    </a>

    <table class="table table-striped table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('edit_category', {category:category.id} )}}">
                            <img src="{{ asset('img/write.png') }}" alt="logo crayon" class="edit_logo">
                        </a>
                        <a href="{{ path('delete_category', {id:category.id} )}}">
                            <img src="{{ asset('img/trash.png') }}" alt="logo corbeille" class="delete_logo">
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
