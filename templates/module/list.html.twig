{% extends 'base.html.twig' %}

{% block title %}Liste des Modules{% endblock %}

{% block body %}
<div class="tableau">
    <h1>Modules</h1>
    <a href="{{ path('new_module') }}">
        <button type="button" class="btn btn-outline-primary">Ajouter Module</button>
    </a>
    
    <table class="table table-striped table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Module</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for module in modules %}
                <tr>
                    <td>{{ module.name }}</td>
                    <td>{{ module.category.name }}</td>
                    <td>
                        <a href="{{ path('edit_module', {module:module.id} )}}">
                            <img src="{{ asset('img/write.png') }}" alt="logo crayon" class="edit_logo">
                        </a>
                        <a href="{{ path('delete_module', {id:module.id} )}}">
                            <img src="{{ asset('img/trash.png') }}" alt="logo corbeille" class="delete_logo">
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
