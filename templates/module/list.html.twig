{% extends 'base.html.twig' %}

{% block title %}Liste des Modules{% endblock %}

{% block body %}
<div class="tableau_module">
    <h1>Modules</h1>
    <a href="{{ path('new_module') }}">
        <button type="button">Add Module</button>
    </a>
    
    <table class="table table-striped table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Module</th>
                <th>Session</th>
                <th>Dur√©e (jours)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for sessionModule in sessionsModules %}
                <tr>
                    <td>{{ sessionModule.module.name }}</td>
                    <td>{{ sessionModule.session.formation.name }}</td>
                    <td>{{ sessionModule.duration }}</td>
                    <td>
                        <a href="">
                            <button type="button">Edit</button>
                        </a>
                        <a href="{{ path('delete_module', {id:sessionModule.module.id} )}}">
                            <button type="button">Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
